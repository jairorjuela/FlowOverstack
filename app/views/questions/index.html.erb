<div class="container" style="margin-top:80px;">
  <div class="row">
    <div class="col-md-12">
      <h1 class="index">Entradas Flowoverstack</h1>

      <% if signed_in? %>
        <div class="text-right">
          <%= link_to "Hacer Nueva Pregunta", new_question_path, class: "btn btn-warning btn-lg" %>
        </div>
      <% end %>

      <% unless signed_in? %>
      <div class="text-right">
        <%= link_to "Hacer Nueva Pregunta", user_session_path, class: "btn btn-warning btn-lg" %>
      </div>
      <% end %>
      <br>
      <br>

      <table class="table table-bordered">
        <tr>
          <th>PREGUNTAS</th>
        </tr>
      <% @questions.each do |question| %>
        <tr>
          <td><%= link_to question.title, question, class: "link-index" %></td>
        </tr>
      <% end %>
      </table>
    </div>
  </div>
</div>
